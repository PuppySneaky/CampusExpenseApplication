<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_report_options.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose report format:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- CSV Report Section with Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CSV Report"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The CSV report includes transaction details, category summaries, and budget comparison, perfect for importing into spreadsheet applications."
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnCsvReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate CSV Report"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:drawablePadding="8dp"/>
    </LinearLayout>

    <!-- PDF Report Section with Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PDF Report"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The PDF report is a formatted document showing expense details, summaries, and visualizations in a printer-friendly layout."
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPdfReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate PDF Report"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:drawablePadding="8dp"/>
    </LinearLayout>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btnCancelReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="8dp"/>
</LinearLayout>